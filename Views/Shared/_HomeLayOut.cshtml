@{
	
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
	<link rel="icon" type="image/x-icon" href="~/HomeAssest/images/logog.png" />
		<meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta name="format-detection" content="telephone=no">
	    <meta name="apple-mobile-web-app-capable" content="yes">
	    <meta name="author" content="">
	    <meta name="keywords" content="">
	    <meta name="description" content="">

	    <link rel="stylesheet" type="text/css" href="/HomeAssest/css/normalize.css">
	    <link rel="stylesheet" type="text/css" href="/HomeAssest/icomoon/icomoon.css">
	    <link rel="stylesheet" type="text/css" href="/HomeAssest/css/vendor.css">
	    <link rel="stylesheet" type="text/css" href="/HomeAssest/style.css">

		<!-- script
		================================================== -->
		<script src="~/HomeAssest/js/modernizr.js"></script>
		<script src="https://kit.fontawesome.com/f4f6f22610.js" crossorigin="anonymous"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
	<div id="header-wrap">
	<div class="top-content  ">
		<div class="container">
			<div class="row">
					<div class="col-md-6">
						<div class="social-links">
							<ul>
								<li>
									<a href="#"><i class="icon icon-facebook"></i></a>
								</li>
								<li>
									<a href="#"><i class="icon icon-twitter"></i></a>
								</li>
								<li>
									<a href="#"><i class="icon icon-youtube-play"></i></a>
								</li>
								<li>
									<a href="#"><i class="icon icon-behance-square"></i></a>
								</li>
							</ul>
						</div><!--social-links-->
					</div>
				<div class="col-md-6">
					<div class="right-element">
							@if (ViewBag.userId == null){
								<a asp-area="" asp-controller="Home" asp-action="Login" class="user-account for-buy"><i class="icon icon-user"></i><span>Account</span></a>
							}else
							{
								<a asp-area="" asp-controller="Home" asp-action="Profile" class="user-account for-buy"><i class="icon icon-user"></i><span>@ViewBag.name </span></a>
								<a asp-area="" asp-action="Logout" class="user-account for-buy"><i class="fa fa-sign-out" aria-hidden="true"></i><span></span></a>
							}
							
							<a asp-area="" asp-controller="Home" asp-action="Cart" class="cart for-buy"><i class="icon icon-clipboard"></i><span>Cart</span></a>

						

					</div><!--top-right-->
				</div>
				
			</div>
		</div>
	</div><!--top-content-->

	<header id="header">
		<div class="container">
			<div class="row">

				<div class="col-md-1">
					<div class="main-logo">
							<a asp-area="" asp-controller="Home" asp-action="Index"><img src="/HomeAssest/images/logog.png" alt="logo"></a>
					</div>

				</div>

				<div class="col-md-10">
					
					<nav id="navbar">
						<div class="main-menu stellarnav">
							<ul class="menu-list">
								<li class="menu-item active"><a asp-area="" asp-controller="Home" asp-action="Index" data-effect="Home">Home</a></li>
									<li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="AboutUs" class="nav-link"> About us</a></li>
									
								
									<li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="Shop" class="nav-link">Shop</a></li>
								<li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="ContactUs" class="nav-link"> Contact</a></li>
							</ul>

							<div class="hamburger">
				               
				            </div>

						</div>
					</nav>

				</div>

			</div>
		</div>
	</header>
		
</div><!--header-wrap-->


    <div>
        @RenderBody()
		@RenderSection("scripts", required: false)

    </div>

	<footer id="footer">
<div class="container">
		<div class="row">

			<div class="col-md-4">

				<div class="footer-item">
					<div class="company-brand">
							<img src="/HomeAssest/images/logog.png" alt="logo" class="main-logo" style="height:6rem;width:6rem ">
					</div>
				</div>

			</div>

			<div class="col-md-2">

				<div class="footer-menu">
					<h5>About Us</h5>
					<ul class="menu-list">
						<li class="menu-item">
							<a href="#">vision</a>
						</li>
						<li class="menu-item">
							<a href="#">articles </a>
						</li>
						<li class="menu-item">
							<a href="#">careers</a>
						</li>
						
					</ul>
				</div>

			</div>
			<div class="col-md-2">

				<div class="footer-menu">
					<h5>Discover</h5>
					<ul class="menu-list">
						<li class="menu-item">
							<a href="#">Home</a>
						</li>
						<li class="menu-item">
								@if (ViewBag.userId == null)
								{
						<a asp-area="" asp-controller="Home" asp-action="Login"> Add Testmonial</a>
								}
								else
								{
	                        <a asp-area="" asp-controller="Home" asp-action="AddTestmonial"> Add Testmonial</a>
								}
								
								
						</li>
						
					</ul>
				</div>

			</div>
			<div class="col-md-2">

			

			</div>

		</div>
		<!-- / row -->

	</div>
</footer>

<div id="footer-bottom">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<div class="copyright">
					<div class="row">

						<div class="col-md-6">
							<p>© 2022 All rights reserved. </p>
						</div>

						<div class="col-md-6">
							<div class="social-links align-right">
								<ul>
									<li>
										<a href="#"><i class="icon icon-facebook"></i></a>
									</li>
									<li>
										<a href="#"><i class="icon icon-twitter"></i></a>
									</li>
									<li>
										<a href="#"><i class="icon icon-youtube-play"></i></a>
									</li>
									<li>
										<a href="#"><i class="icon icon-behance-square"></i></a>
									</li>
								</ul>
							</div>
						</div>

					</div>
				</div><!--grid-->

			</div><!--footer-bottom-content-->
		</div>
	</div>
</div>
	
	<script src="/HomeAssest/js/jquery-1.11.0.min.js"></script>
	<script src="/HomeAssest/js/plugins.js"></script>
	<script src="/HomeAssest/js/script.js"></script>
</body>
</html>
